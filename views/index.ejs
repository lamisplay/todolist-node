<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Todo list</title>
</head>
<body>
    <h1>To-do list</h1>
    

    <form action="/add" class="w-50 mx-auto px-3 py-3 shadow mt-4" method="post">
        <h4>Todo List</h4>
        <input type="text" name="name" class="form-control mt-2" placeholder="Enter your name">
        <input type="text" name="task" class="form-control mt-2" placeholder="Add a new task" required>
        <button class="btn btn-primary mt-2" type="submit">Add Task</button>
    </form>
    <ul>
        
        <% if (tasks && tasks.length > 0) { %>
            <table class="table table-bordered mt-2">
                <thead>
                   <th>title</th>
                   <th>content</th>
                   <th>delete</th>
                   <th>edit</th>
                </thead>

                <tbody>
         <% tasks.forEach((el, index) => { %>
           
                    <tr>
                        <td><%= el.name  %></td>
                        <td><%= el.task  %></td>
                        <td>
                            <form action="/delete/<%= index %>" method="post">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                        <td>
                            <form action="/edit/<%= index %>" method="get">
                                <button type="submit" class="btn btn-success">Edit</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                   </tbody>

            </table>
        
        <% } %>
        
     </ul>
    
</body>
</html>